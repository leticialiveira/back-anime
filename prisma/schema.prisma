generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String      @id @unique
  email     String      @unique
  phone     BigInt      @unique
  user      String      @unique
  password  String
  postVideo PostVideo[]
  anime     Anime[]
  createdAt DateTime    @default(now())
  updateAt  DateTime    @updatedAt
}

model PostVideo {
  id        String   @id
  // idAnime Int
  comment   String
  authorId  String
  author    Users    @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  // default => valor inicial
  updateAt  DateTime @updatedAt
}

model Anime {
  id          String   @id
  img         String
  name        String
  category    String
  genero      String
  description String
  userId      String
  user        Users    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}
